@{
    ViewData["Title"] = "Home Page";
}

<body>
    <a href='@Url.Action("AgregarJuego","Home")' class="btn btn-info">Agregar juego</a>
    <div class="row">
        @{
            @foreach (Juego item in @ViewBag.listaJuegos)
            {
                <div class="card OrdenarJuegosIndex" style="width: 14rem;">
                    <img src="@item.Imagen" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <h6 class="likes">@item.CantLikes</h6>
                        <button onclick="Likes(@item.IdJuego)">
                            <img class="corazon" src="/CorazonBlanco.jpg">
                        </button>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalJuego"
                        onclick="MostrarMasInfo(@item.IdJuego)">
                            Más info
                        </button>
                    </div>
                </div>
            }
        }
    </div>
    <!-- Modal -->
    <div class="modal fade" id="ModalJuego" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" style="margin-top: 20%;" role="document">
            <div class="modal-content bg-white text-dark">
                <div class="modal-body">
                    <p id="FechaCreacion"></p>
                    <p id="Descripcion"></p>
                    <p id="Precio"></p>
                </div>
                <div class="modal-footer">
                    <button class="noselect buttonCerrar" data-bs-dismiss="modal"><span class="text">Cerrar</span><span class="icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"><path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"></path></svg></span></button>
                    <!--<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button> -->
                    <button class="noselect buttonComprar" data-bs-dismiss="modal"><span class="text">Comprar</span><span class="icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"><path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"></path></svg></span></button>
                   <!-- <a class="fancy" href="#">
                        <span class="top-key"></span>
                        <span class="text">Comprar</span>
                        <span class="bottom-key-1"></span>
                        <span class="bottom-key-2"></span>
                    </a> -->
                </div>
                
            </div>
            <div class="modal-card">
                <img id="BotonLike"></p>
            </div>
        </div>
    </div>
</body>