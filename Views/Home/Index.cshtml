@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="col-md-12">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block" src="/Ark.jpg" width="100%" />
                </div>
                <div class="carousel-item">
                    <img class="d-block" src="/Avion.jpg" width="100%" />
                </div>
                <div class="carousel-item">
                    <img class="d-block" src="/Csgo.jpg" width="100%" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <a href='@Url.Action("AgregarJuego","Home")' class="btn btn-info NuevoJuego">Agregar juego</a>
    <div class="row">
        @{
            @foreach (Juego item in @ViewBag.listaJuegos)
            {
                <div class="card OrdenarJuegosIndex" style="width: 14rem;">
                    <img src="@item.Imagen" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalJuego"
                        onclick="MostrarMasInfo(@item.IdJuego)">
                            Más info
                        </button>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Modal -->
    <div class="modal fade" id="ModalJuego" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" style="margin-top: 20%;" role="document">
            <div class="modal-content bg-white text-dark">
                <div class="modal-body">
                    <p id="FechaCreacion"></p>
                    <p id="Descripcion"></p>
                    <p id="Precio"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Comprar</button>
                </div>
            </div>
        </div>
    </div>
</body>